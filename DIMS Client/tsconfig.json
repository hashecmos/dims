{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": false,
    "outDir": "dist"
  },
  "filesGlob": [
  "**/*.ts"
],

"atom": {
  "rewriteTsconfig": false
},
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
